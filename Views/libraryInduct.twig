<script type="text/javascript">
    function toggleKeep() {
	keeping = $("#keepCheckbox").next().attr('class').split(" ").includes('active');
	printing = $('#printCheckbox').next().attr('class').split(" ").includes('active');
	// Make notes required if not keeping
	$('#notes').prop('required', keeping);
	if (keeping == printing)
		// Recommend to print library label if keeping
		$('#printCheckbox').next().find('button').click();
    }

    function dateChanged() {
	// Everytime the release date or in date is changed, recommend if the album should
	// be added to the playlist or library archive. If the release date is within 6 months
	// of the received date, add to playlist. Otherwise, add to the library.
	rel_date_arr = $('#reldate').val().split('-');
	in_date_arr = $('#indate').val().split('-');

	rel_date = new Date(rel_date_arr[0], rel_date_arr[1]-1, rel_date_arr[2]);
	in_date = new Date(in_date_arr[0], in_date_arr[1]-1, in_date_arr[2]);

	millisecs_per_day = 86400000;
	days_per_month = 30.4167;

	millisecs_dif = in_date - rel_date;
	months_old = millisecs_dif / millisecs_per_day / days_per_month;

	curr_playlist_val = $('#playlistCheckbox').next().attr('class').split(" ").includes('active');
	if (months_old <= 6 != curr_playlist_val)
		$('#playlistCheckbox').next().find('button').click();
    }

    function PrintModal(printer){
        $("#printModal").modal({
            show: 'true'
        });
    }
    function edit(id){
        window.open('{{siteUrl}}/library/'+id);
    }

    function PrintLabels(){
        print_start = $("#start").val();
        media_type = $("#media-type").val();
        outline = $("#outline").is(':checked');
        window.open('/labels/print?type='+media_type+'&start='+print_start+
                '&outline='+outline, '  printwindow');
    }

    function UpdateAutoArtist(method,id){
        method = typeof method !== 'undefined' ? method : "any";
        id = typeof id !== 'undefined' ? id : "art_field";

        $('#'+id).autocomplete({
            //source: "../MusicLib/DB_Search_Artist.php",
            source: "/legacy/opl/AJAX/playlist.get_artist.php?type=artist&method="+method,
//            source: function(request, response){
//                $.ajax({
//                    url: "/library/search/"+request.term,
//                    dateType: "json",
//                    success: response,
//                    error: function(){
//                        response([]);
//                    }
//                });
//            },
            minLength: 2
        });
    }

    function ChangeAutoComplete(id,option){
        $('#method_hidden').val(option);
        $("#"+id).autocomplete("destroy");
        UpdateAutoArtist(option,id);
    }

    function ClearPrintQueue(){
        $( "#dialog-confirm" ).dialog({
            dialogClass: 'no-close',
            resizable: false,
            modal: true,
            buttons: {
                Confirm: function() {
