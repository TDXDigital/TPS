{% extends 'baseAdmin.twig' %}
{% block headScripts %}
<style>
	.row.vertical-divider {
  overflow: hidden;
}
.row.vertical-divider > div[class^="col-"] {
  text-align: center;
  padding-bottom: 100px;
  margin-bottom: -100px;
  border-left: 3px solid #F2F7F9;
  border-right: 3px solid #F2F7F9;
}
.row.vertical-divider div[class^="col-"]:first-child {
  border-left: none;
}
.row.vertical-divider div[class^="col-"]:last-child {
  border-right: none;
}
</style>
{% endblock %}

{% block title %}{{title|default('Administration Dashboard')}}{% endblock %}
{% block breadcrumb %}
<ol class="breadcrumb">
    <li>
        <i class="fa fa-dashboard"></i>  <a href="/">Dashboard</a>
    </li>
    <li class="active">
        <i class="fa fa-tasks"></i> <a href="/Episode/">Episode</a>
    </li>
    <li class="active">
        <a href="/review/search/album/{{album.RefCode}}"><i class="fa fa-barcode"></i> {{episode.RefCode}}</a>
    </li>
</ol>
{% endblock %}
{% block content %}

<!-- Episode Info -->
<table class="table">
	<tr>
		<td class="col-md-2">SHow Classification: {{episode.type}}</td><td class="col-md-2">Sponsor: {{sponser}}</td> <td class="col-md-2 bg-warning">Ads: </td> <td class="col-md-2 bg-warning">PSA/Promo: </td> <td class="col-md-2 bg-success">Canadian Content Required: </td> <td class="col-md-2 bg-success">Playlist Required: </td>
	</tr>

	<tr></tr>

	<tr style="border-bottom-style:hidden;">
		<th>Air Date</th> <th>Air Time</th> <th>Program</th> <th>Station</th> <th>Description</th><th>Pre-Record</th>
	</tr>
	<tr>
		<td class="col-md-2">{{episode.date}}</td> <td class="col-md-2">{{episode.time}}</td> <td class="col-md-2">{{episode.name}}</td> <td class="col-md-2">{{episode.callsign}}</td> <td class="col-md-2">{{episode.description}}</td> <td class="col-md-2">{{episode.pre-record}}</td>
	</tr>
</table>

<hr>
<!--  Ads / Commercials / Message-->
<table>
	<tr>
		<td class="col-md-3" style="color:green;">Available Friends Ads</td> <td class="col-md-3" style="color:blue;">Required Commercials This Hours</td> <td class="col-md-4" style="color:orange;"> Messages</td> <td class="col-md-2"> Time .. </td>
	</tr>
		<td class="col-md-3">ads options</td> <td class="col-md-3">required ads options</td> <td style="font-style: italic; font-size: 80%; color: #eb4b20 " class="col-md-4"><strong>IMPORTANT: When prompted to play required ADs you are <u>ONLY</u> to play the required ADs until they are no longer prompted. Then, and only then are you permitted to play a friend ad <u>IF</u> you have not met your AD requirements</strong></td> <td class="clock col-md-2">clock</td>
</table>

<hr>
<!-- Insert Songs -->
<div class="container" style="margin-left: 0;">
	<div class ="row">
		<div class="col-md-3 " style="border-right: 3px solid #F2F7F9">
			<div class="row-fluid">
				<div class="col-md-12"><label>Type</label></div>
			</div>
			<div class="row-fluid"><div class="col-md-12">	
				<select name="cat" id="DDLNormal" class="form-control" onchange="CHtype()">
	               <option value="53">53, Sponsored Promotion</option>
	               <OPTION value="52">52, Sponsor Indentification</OPTION>
	               <OPTION VALUE="51">51, Commercial</OPTION>
	               <option value="45">45, Show Promo</option>
	               <option value="44">44, Programmer/Show ID</option>
	               <option value="43">43, Musical Station ID</option>
	               <option value="42">42, Tech Test</option>
	               <option value="41">41, Themes</option>
	               	<option value="36">36, Experimental</option>
	               	<option value="35">35, NonClassical Religious</option>
	               	<option value="34">34, Jazz and Blues</option>
	               	<option value="33">33, World/International</option>
	               	<option value="32">32, Folk</option>
	               	<option value="31">31, Concert</option>
	               	<!--<option value="3">3, Special Interest</option>-->
	               	<option value="24">24, Easy Listening</option>
	               	<option value="23">23, Acoustic</option>
	               	<option value="22">22, Country</option>
	               	<option value="21">21, Pop, Rock and Dance</option>
	               	<!--<option value="2" selected="True">2, Popular Music</option>-->
	               <option value="12">12, PSA/Spoken Word Other</option>
	               <OPTION VALUE="11">11, News</option>

               	</select>
			</div></div>

		</div>
		<div class="col-md-2">
			<div class="input-group">
		    	  <div class="input-group-addon">Playlist #</div>
			      <input type="text" class="form-control" id="playlistNum" placeholder="">
		    </div>
		</div>

		<div class="col-md-2">
			<div class="input-group">
		    	  <div class="input-group-addon">Time</div>
			      <input type="time" class="form-control" id="" placeholder="">
		    </div>
		</div>
		<div class="col-md-2">CC <input type="checkbox" id="ccin" name="cancon" value="1"/> &nbsp;
							  HIT <input type="checkbox" id="hitin" name="hit" value="1"/> &nbsp;
							  INS <input type="checkbox" id="insin" name="instrumental" value="1"/></div>
		<div class="col-md-1"> 
			<select name="type" id="type" class="form-control">
	           <option value="NA">---</option>
	           <option value="BACKGROUND">BG</option>
	           <option value="THEME">TH</option>
	       </select></div>
		<div class="col-md-2">
			<input list="lang" name="lang" required value="English" size="10" maxlength="40" class="form-control"/>
	           <datalist id="lang">
	           		<option value="English">
	           		<option value="French">
	           </datalist>
		</div>
	</div>
	<div class="row">
		<div class="col-md-3"></div>  
		<div class="col-md-2"> <input class="form-control" type="text" placeholder="Title"> </div> 
		<div class="col-md-2"><input class="form-control" id="artist" type="text" placeholder="Artist"></div>
		<div class="col-md-2"><input class="form-control" id="album" type="text" placeholder="Album"></div>
		<div class="col-md-3"><input name="sub" type="submit" class="btn pull-right" value="Insert" onclick="formsubmit()"/></div>
	</div>
</div>

<br>
<!-- Inserted Song table -->
<div class="container" style="margin-left: 0;"> 
	<table class="table">
		<tr>
			<th>Category</th> <th>Playlist</th> <th>Spoken</th> <th>Time</th><th>Title</th><th>Artist</th><th>Album</th> <th>Composer</th> <th>Composer</th> <th>CC</th> <th>Hit</th> <th>Ins</th> <th>Type</th> <th>Language</th>
		</tr>
	</table>
</div>

<form action="" method="POST">

</form>





{% endblock %}
{% block lastScripts %}
<script src="{{siteUrl}}/TPSBIN/JS/episode.js"></script>

{% endblock %}
